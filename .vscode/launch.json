{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Vite React App",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "trace": true,
      "disableContentValidation": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "pathMapping": {
        "/": "${workspaceFolder}",
        "/src": "${workspaceFolder}/src"
      },
      "preLaunchTask": "npm: dev"
    },
    {
      "name": "Debug Vite React App (Attach)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "trace": true,
      "disableContentValidation": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "pathMapping": {
        "/": "${workspaceFolder}",
        "/src": "${workspaceFolder}/src"
      }
    }
  ]
}
