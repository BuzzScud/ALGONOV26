# Apache configuration for React Router SPA deployed to root domain

# MIME types - CRITICAL: Must be set FIRST to prevent HTML entity encoding
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType text/css .css
  # Explicitly set charset to prevent encoding issues
  AddCharset UTF-8 .js
  AddCharset UTF-8 .css
</IfModule>

# Force correct Content-Type for JavaScript files to prevent HTML entity encoding
# This MUST come before compression to ensure proper MIME type handling
<IfModule mod_headers.c>
  # Set Content-Type header for JS files BEFORE any processing
  <FilesMatch "\.js$">
    Header set Content-Type "application/javascript; charset=UTF-8"
  </FilesMatch>
  # Set Content-Type header for CSS files
  <FilesMatch "\.css$">
    Header set Content-Type "text/css; charset=UTF-8"
  </FilesMatch>
  # Security headers
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Enable rewrite engine
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Redirect /src/main.jsx requests to the actual built JS file
  # This fixes the 404 error when source index.html is accidentally served
  RewriteCond %{REQUEST_URI} ^/src/main\.jsx$
  RewriteRule ^.*$ assets/index-Bf0aB5-A.js [L]
  
  # Block direct access to other source files in production (prevent 404 errors)
  RewriteCond %{REQUEST_URI} ^/src/
  RewriteRule ^.*$ - [F,L]
  
  # Don't rewrite files or directories that exist
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Rewrite everything else to index.html (for React Router)
  RewriteRule ^ index.html [L]
</IfModule>

# Enable compression - EXCLUDE text/xml to prevent JS files from being treated as XML
<IfModule mod_deflate.c>
  # Compress JS files as application/javascript, NOT as text/xml
  # Removed text/xml from compression types to prevent HTML entity encoding
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json
</IfModule>

# Set cache headers
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

